{
  "name": "silver-surfer",
  "displayName": "Silver surfer",
  "version": "0.0.1",
  "description": "A browser extension to simplify web use for the elderly",
  "author": "Andrew, Joyal, Thomas, Bryan",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.11",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://localhost:5000/*"
    ],
    "permissions": [
      "sidePanel",
      "storage",
      "tabs"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }
}
